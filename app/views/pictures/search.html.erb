<% content_for :title do %>
Welcome to my photo page
<% end %>

<% content_for :info do %>
Click on the pictures to enlarge
<% end %>

<div class="picture-overview">
  <% @pictures.each do |picture| %>
    <div class="picture-small">
      <p><div class="title"><%= link_to truncate(picture[:title], length: 20), "/pictures/#{picture.id}" %></div> 
      <div class="artist"><%= picture[:artist] %></div></p>
      <div class="picture"><%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %></div>
    </div>
  <% end %>
</div>
